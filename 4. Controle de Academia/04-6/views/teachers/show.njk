{% extends 'layout.njk' %}

{% block content %}

<div class="card">

    <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>

    <section class="details">

        <h3>Detalhes</h3>
            
        <div class="item">
            <div>Nome</div>
            <div>{{teacher.name}}</div>
        </div>
        
        <div class="item">
            <div>Idade</div>
            <div>{{teacher.birth}}</div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>{{teacher.scholarship}}</div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
            {% for area in teacher.areas %}
                <span>{{area}}</span>
            {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{teacher.since}}</div>
        </div>

        <div class="options">
        
            <a class="button" href="/teachers/{{teacher.id}}/edit">Edit</a>
        
            <form class="form-delete" method="POST" action="/teachers?_method=DELETE">
            
                <input type="hidden" name="id" value={{teacher.id}}>
            
                <button type="submit">Delete</button>
            
            </form>
        
        </div>

    </section>


</div>
{% endblock content %}