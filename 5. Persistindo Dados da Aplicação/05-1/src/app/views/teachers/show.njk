{% extends 'layout.njk' %}

{% block content %}

<div class="card">

    <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>

    <section class="details">

        <h3>Details</h3>
            
        <div class="item">
            <div>Name</div>
            <div>{{teacher.name}}</div>
        </div>
        
        <div class="item">
            <div>Age</div>
            <div>{{teacher.birth}}</div>
        </div>

        <div class="item">
            <div>Scholarship</div>
            <div>{{teacher.scholarship}}</div>
        </div>

        <div class="item">
            <div>Areas</div>
            <div>
            {% for area in teacher.areas %}
                <span>{{area}}</span>
            {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Since</div>
            <div>{{teacher.since}}</div>
        </div>

        <div class="options">
        
            <a class="button" href="/teachers/{{teacher.id}}/edit">Edit</a>
        
            <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
            
                <input type="hidden" name="id" value={{teacher.id}}>
            
                <button type="submit">Delete</button>
            
            </form>
        
        </div>

    </section>
    
    {% include 'confirm.njk' %}

</div>
{% endblock content %}