{% extends 'layout.njk' %}

{% block content %}

<form method="POST" class="card" action="/teachers">

    <section class="avatar" style="background: url(https://source.unsplash.com/collection/8874679/500x500) no-repeat center center / cover"></section>

    <section class="details">

        <h3>New Teacher</h3>
            
        <div class="item">
            <div>Avatar URL</div>
            <input
                type="url"
                name="avatar_url"
                placeholder="http://"
            >
        </div>
        
        <div class="item">
            <div>Nome</div>
            <input
                type="text"
                name="name"
                placeholder="Teacher Name"
            >
        </div>

        <div class="item">
            <div>Data de Nascimento</div>
            <input
                type="date"
                name="birth"
            >
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <select name="scholarship">
                <option value="" disabled selected>Selecione o grau</option>
                <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                <option value="Mestrado">Mestrado</option>
                <option value="Doutorado">Doutorado</option>
            </select>
        </div>

        <div class="item">
            <div>Tipo de Aula</div>
            <span><input type="radio" name="type" value="Presencial" checked>Presencial</span>
            <span><input type="radio" name="type" value="À Distancia">À Distancia</span>
        </div>

        <div class="item">
            <div>Área de Atuação</div>
            <input
                type="input"
                name="area"
                placeholder="Separe por vírgula as áreas de atuação"
            >
        </div>

        <button type="submit">Sign me up!</button>

    </section>

</form>
{% endblock content %}