{% extends 'layout.njk' %}

{% block content %}

<div class="card table-container">
    
    <div class="header">
        
        <a class="button" href="/teachers/create">New</a>
        
    </div>

    <table width='100%'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>School Year</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for student in students %}
        <tr>
            <td><span style="background-image: url({{student.avatar_url}})"></span>
            {{student.name}}
            </td>
            <td>{{student.email}}</td>
            <td>{{student.year}}</td>
            <td><a href="/students/{{student.id}}">Show</a></td>
        </tr>
        {% endfor %}
    </tbody>
    </table>


</div>
{% endblock content %}