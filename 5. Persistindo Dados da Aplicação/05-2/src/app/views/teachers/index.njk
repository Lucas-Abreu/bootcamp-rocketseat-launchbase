{% extends 'layout.njk' %}

{% block content %}

<div class="card table-container">

    <a class="button" href="/teachers/create">New Teacher</a>

    <table width='100%'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Areas</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for teacher in teachers %}
        <tr>
            <td><span style="background-image: url({{teacher.avatar_url}})"></span>
            <p>{{teacher.name}}</p>
            </td>
            <td>
            <span class="area">{{teacher.subjects_taught}}</span>
            </td>
            <td><a href="/teachers/{{teacher.id}}">Show</a></td>
        </tr>
        {% endfor %}
    </tbody>
    </table>


</div>
{% endblock content %}